<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comptemoutons">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sheep_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sheep_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".About"
            android:label="@string/titleAbout"
        />

        <activity
            android:name=".Ajouter"
            android:label="@string/titleAjouter"
            android:screenOrientation="portrait"
        />

        <activity
            android:name=".Accueil"
            android:label="@string/titleAccueil"
        />

        <activity
            android:name=".Connexion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
